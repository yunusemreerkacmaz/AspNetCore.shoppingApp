@using System.Threading.Tasks
@model ShoppingApp.MsSqlServer.MvcWebUI.Models.RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/_AdminLayout.cshtml";
}

<div class="container">
    <div class="card bg-light mb-3" style="max-width: 35rem;">
        <div class="card-header">Kayıt</div>
        <div class="card-body">

            <form asp-controller="Account" asp-action="Register" method="post" class="form-horizontal" role="form">
                <div class="form-group">
                    <label asp-for="UserName" class="col-md-3 control-label"></label>
                    <div class="col-md-9">
                        <input asp-for="UserName" type="text" class="form-control" placeholder="Ad" />
                        <span asp-validation-for="UserName"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Password" class="col-md-3 control-label"></label>
                    <div class="col-md-9">
                        <input asp-for="Password" type="text" class="form-control" placeholder="Soyad" />
                        <span asp-validation-for="Password"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Email" class="col-md-3 control-label"></label>
                    <div class="col-md-9">
                        <input asp-for="Email" type="text" class="form-control" placeholder="Email" />
                        <span asp-validation-for="Email"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-3 col-md-9">
                        <input type="submit" class="btn btn-info" value="Register" />icon-hand-right
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


