@model ShoppingApp.MsSqlServer.MvcWebUI.Models.ProductListViewModel

@{
    Layout = "~/Views/_Layout.cshtml";
}


<table class="table table-striped table-bordered ">
    <thead class="thead-dark">
        <tr>
            <th><span class="badge badge-info " id="tablo_baslik">markası</span> </th>
            <th><span class="badge badge-info " id="tablo_baslik">Fiyatı</span></th>
            <th><span class="badge badge-info " id="tablo_baslik">stok adedi</span></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model.Products)
        {
            <tr class="text-center">
                <td>@product.ProductName</td>
                <td>@product.UnitPrice</td>
                <td scope="row">@product.UnitInStock</td>
                <td><a class="btn btn-xs btn-success" asp-controller="Cart" asp-action="AddToCart" asp-route-productId="@product.ProductId">Cart Ekle </a></td>
            </tr>

        }
    </tbody>

</table>

    
    <product-list-pager Current-Page="@Model.CurrentPage"
                        Current-Category="@Model.CurrentCategory"
                        page-count="@Model.pageCount"
                        page-size="@Model.PageSize">
        
    </product-list-pager>




